                        android:text="19"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/player_two_19_close"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="54dp"
                        android:background="@drawable/border_style"
                        android:onClick="nineteenCloseOutPlayer2"
                        android:text=" "
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/player_two_18"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/border_style"
                        android:onClick="addEighteenForPlayer2"
                        android:text="18"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/player_two_18_close"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="54dp"
                        android:background="@drawable/border_style"
                        android:onClick="eighteenCloseOutPlayer2"
                        android:text=" "
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/player_two_17"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/border_style"
                        android:onClick="addSeventeenForPlayer2"
                        android:text="17"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/player_two_17_close"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="54dp"
                        android:background="@drawable/border_style"
                        android:onClick="seventeenCloseOutPlayer2"
                        android:text=" "
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/player_two_16"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/border_style"
                        android:onClick="addSixteenForPlayer2"
                        android:text="16"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/player_two_16_close"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="54dp"
                        android:background="@drawable/border_style"
                        android:onClick="sixteenCloseOutPlayer2"
                        android:text=" "
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/player_two_15"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/border_style"
                        android:onClick="addFifteenForPlayer2"
                        android:text="15"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/player_two_15_close"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="54dp"
                        android:background="@drawable/border_style"
                        android:onClick="fifteenCloseOutPlayer2"
                        android:text=" "
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/player_two_BB"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/border_style"
                        android:onClick="addTwentyfiveForPlayer2"
                        android:text="BB"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/player_two_BB_close"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="54dp"
                        android:background="@drawable/border_style"
                        android:onClick="BBCloseOutPlayer2"
                        android:text=" "
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/player_2_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/border_style"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="32sp" />

            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/reset_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/border_style"
            android:onClick="resetScore"
            android:text="RESET"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>
</ScrollView>
