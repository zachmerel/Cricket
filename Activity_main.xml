<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:ignore="ContentDescription">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:scaleType="center"
            android:src="@drawable/brickwall" />

        <TextView
            android:id="@+id/title_cricket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border_style"
            android:padding="6dp"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/dartboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_cricket"
            android:adjustViewBounds="true"
            android:src="@drawable/dartboard" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                tools:context=".MainActivity">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:text="Player1"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/player_one_20"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/border_style"
                        android:onClick="addTwentyForPlayer1"
                        android:text="20"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/player_one_20_close"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="54dp"
                        android:background="@drawable/border_style"
                        android:onClick="twentyCloseOutPlayer1"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/player_one_19"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/border_style"
                        android:onClick="addNineteenForPlayer1"
                        android:text="19"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/player_one_19_close"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="54dp"
                        android:background="@drawable/border_style"
                        android:onClick="nineteenCloseOutPlayer1"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/player_one_18"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/border_style"
                        android:onClick="addEighteenForPlayer1"
                        android:text="18"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/player_one_18_close"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="54dp"
                        android:background="@drawable/border_style"
                        android:onClick="eighteenCloseOutPlayer1"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/player_one_17"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/border_style"
                        android:onClick="addSeventeenForPlayer1"
                        android:text="17"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/player_one_17_close"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="54dp"
                        android:background="@drawable/border_style"
                        android:onClick="seventeenCloseOutPlayer1"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/player_one_16"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/border_style"
                        android:onClick="addSixteenForPlayer1"
                        android:text="16"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/player_one_16_close"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="54dp"
                        android:background="@drawable/border_style"
                        android:onClick="sixteenCloseOutPlayer1"
                        android:text=" "
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/player_one_15"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/border_style"
                        android:onClick="addFifteenForPlayer1"
                        android:text="15"
